{
	"name": "YouTube Music Account Switch",
	"description": "Automatically switch google accounts between YouTube and YouTube Music.",
	"version": "0.9",
	"manifest_version": 2,
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"storage",
		"declarativeContent"
	],
	"page_action": {
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.youtube.com/*"
			],
			"css": [
				"style.css"
			],
			"js": [
				"jquery-3.5.1.min.js",
				"content.js"
			]
		}
	],
	"web_accessible_resources": [
		"icon.png"
	]
}